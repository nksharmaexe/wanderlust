<%- layout("/layouts/boilerplate") %>
<div class="row mt-3">
  <h2 class="col-lg-6 offset-lg-3">Enter New Password</h2>
  <div class="col-lg-6 offset-lg-3">
    <form action="/reset-password/<%= token %>" method="post" class="needs-validation" novalidate>
      <div class="mb-3">
        <label for="password" class="form-lable">New Password</label>
        <input
          required
          class="form-control"
          type="password"
          name="newPassword"
          id="password"
          placeholder="New Password"
        />
      </div>
      <button class="btn btn-success">Submit</button>
    </form>
  </div>
</div>