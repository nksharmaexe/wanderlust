<% if(success && success.length){ %>
<div
  class="alert alert-success mt-1 col-lg-6 offset-lg-3 alert-dismissible fade show"
  role="alert"
>
  <%= success %>
  <button
    type="button"
    class="btn-close"
    data-bs-dismiss="alert"
    aria-label="Close"
  ></button>
</div>
<% }%> <% if(error && error.length){ %>
<div
  class="alert alert-danger mt-1 col-lg-6 offset-lg-3 alert-dismissible fade show"
  role="alert"
>
  <%= error %>
  <button
    type="button"
    class="btn-close"
    data-bs-dismiss="alert"
    aria-label="Close"
  ></button>
</div>
<% }%>
